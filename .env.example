# Configuration d'environnement - Classification des Cultures Agricoles

# Environnement
NODE_ENV=production
PORT=3000

# URLs de base
NEXT_PUBLIC_API_URL=https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Sécurité
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10
CLASSIFY_RATE_LIMIT_MAX=5

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/tiff,image/geotiff

# Cache Configuration
CACHE_TTL=300000
MEMORY_CACHE_MAX_SIZE=100

# Monitoring
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=https://your-app.vercel.app
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Database (si nécessaire pour les logs/analytics)
DATABASE_URL=your-database-url-if-needed

# Services externes (optionnel)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-id

# Modèle ML Configuration
MODEL_VERSION=1.0.0
MODEL_CONFIDENCE_THRESHOLD=0.5
ENABLE_MODEL_CACHING=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_STATIC_CACHING=true
CACHE_CONTROL_MAX_AGE=31536000

# Sécurité avancée
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true
SESSION_SECRET=your-session-secret
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Limites de ressources
MAX_CONCURRENT_UPLOADS=5
MAX_CONCURRENT_CLASSIFICATIONS=3
REQUEST_TIMEOUT=30000

# Fonctionnalités
ENABLE_EXPORT_CSV=true
ENABLE_EXPORT_GEOJSON=true
ENABLE_EXPORT_PDF=true
ENABLE_BATCH_PROCESSING=false

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Application en maintenance. Revenez bientôt."

# Développement uniquement
DEBUG=false
VERBOSE_LOGGING=false
